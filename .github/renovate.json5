{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'local>android/.github:renovate-config',
  ],
  baseBranchPatterns: [
    'main',
  ],
  gitIgnoredAuthors: [
    'renovate[bot]@users.noreply.github.com',
    'github-actions[bot]@users.noreply.github.com',
    '41898282+github-actions[bot]@users.noreply.github.com',
  ],
  ignoreDeps: [
    'monica.android.application',
    'monica.cmp',
    'monica.kmp',
    'monica.kotlin.inject',
    'monica.network',
  ],
  packageRules: [
    {
      "matchPackageNames": [
        "org.jetbrains.kotlinx:kotlinx-datetime"
      ],
      "matchNewValue": "0.7.1-0.6.x-compat",
      "enabled": false
    },
    {
      // Kover 0.9.6+ breaks due to some error where it looks for non-existing java sources
      "matchPackageNames": [
        "org.jetbrains.kotlinx.kover.aggregation",
      ],
      "matchNewValue": "0.9.6",
      "enabled": false
    },
  ]
}
