{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'local>android/.github:renovate-config',
  ],
  baseBranchPatterns: [
    'main',
  ],
  gitIgnoredAuthors: [
    'renovate[bot]@users.noreply.github.com',
    'github-actions[bot]@users.noreply.github.com',
    '41898282+github-actions[bot]@users.noreply.github.com',
  ],
  ignoreDeps: [
    'monica.android.application',
    'monica.android.library',
    'monica.cmp',
    'monica.kmp',
    'monica.kotlin.inject',
    'monica.network',
  ],
  packageRules: [
    {
      "matchPackageNames": [
        "org.jetbrains.kotlinx:kotlinx-datetime"
      ],
      "matchNewValue": "0.7.1-0.6.x-compat",
      "enabled": false
    },
    {
      // kotest 6.0.4 seems to be broken with:
      //   Cannot read field "test" because the return value of "java.util.Map.get(Object)" is null
      "matchPackageNames": [
        "io.kotest:kotest-extensions-junitxml",
        "io.kotest:kotest-extensions-htmlreporter",
        "io.kotest:kotest-runner-junit5",
      ],
      "matchNewValue": "6.0.4",
      "enabled": false
    },
  ]
}
